#
##---------- aplicaciones ----------##

# terminal 
super + Return
  kitty	

# lanzador de programas
super + @space
  rofi -show drun

alt + F1
  rofi_launcher 

#Rofi calc
super + i
  rofi -show calc

#app
super + {w,e}
  {firefox, thunar}

# Brighness control
XF86MonBrightness{Up,Down}
	bspbrightness{ --inc, --dec}

# Speaker Volume control
XF86Audio{RaiseVolume,LowerVolume}
	bspvolume{ --inc, --dec}

#
##---------- Bspwm ----------##
#

# hacer que sxhkd recargue sus archivos de configuración:
super + Escape
	pkill -USR1 -x sxhkd

# salir/reiniciar bspwm
ctrl + shift + {q,r}
	bspc {quit,wm -r}

# kill window
ctrl + alt + Escape
    xkill

# Cambiar al último espacio de trabajo abierto
super + {Tab,grave}
	bspc {node,desktop} -f last


# cerrar y matar
super + {_,shift + }q
	bspc node -{c,k}

# alternar entre el diseño en mosaico y el diseño monocle
super + m
	bspc desktop -l next

# enviar el nodo marcado más nuevo al nodo preseleccionado más nuevo
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# Toggle Fullscreen
super + f
    bspc node -t "~"fullscreen

# Change focus to next window, including floating window
alt + {_,shift + }Tab
	bspc node -f {next.local,prev.local}

# Set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#Toggle beetwen floating & tiled
super + n 
    bspc node -t "~"{floating,tiled}

#
## enfoque/intercambio
#

# enfocar el nodo en la dirección dada
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# enfocar el último nodo/escritorio
super + {grave,Tab}
	bspc {node,desktop} -f last

# enfocar el nodo más antiguo o más nuevo en el historial de enfoque
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# enfocar o enviar al escritorio dado
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

